@* font awsome *@
<script src="https://kit.fontawesome.com/383abdf887.js" crossorigin="anonymous"></script>

<style>
    .headerOfProductList {
        padding: 0 50px;
        display: flex;
    }

    .linestraight {
        margin-right: 15px;
        height: 50px;
        border: 3px solid red;
    }

    hr {
        width: 1400px;
        border: 2px solid;
        padding: 0 50px;
        margin: 0 auto;
    }


    /*-------------------------------CSS PHAN SLIDER -----------------------------------------------*/
    .slider {
        margin-bottom: 20px;
    }

    .card-pro-img {
        width: 100%;
        height: 280px;
    }

    .card-pro-name, .card-pro-price {
        font-size: 1.25rem;
        font-weight: 700;
        text-align: center;
    }

    /*----------------css rating ngôi sao --------------*/
    .star-wrapper {
        text-align: center;
    }

        .star-wrapper i {
            font-size: 1em;
            color: #F2BE22;
            text-decoration: none;
            transition: all 0.5s;
        }

            .star-wrapper i:hover {
                color: gold;
                transform: scale(1.3);
            }


    /* css nút mua hàng */
    .btn-mua-hang {
        background: radial-gradient(#c31432, #240b36);
        border-radius: 999px;
        box-shadow: #5E5DF0 0 10px 20px -10px;
        box-sizing: border-box;
        cursor: pointer;
        font-family: Inter,Helvetica,"Apple Color Emoji","Segoe UI Emoji",NotoColorEmoji,"Noto Color Emoji","Segoe UI Symbol","Android Emoji",EmojiSymbols,-apple-system,system-ui,"Segoe UI",Roboto,"Helvetica Neue","Noto Sans",sans-serif;
        font-size: 1.0rem;
        font-weight: 600;
        line-height: 24px;
        opacity: 1;
        outline: 0 solid transparent;
        padding: 8px 18px;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        margin: 10px 0px 0px 20%;
        /*width: fit-content;*/
        word-break: break-word;
        border: 0;
    }

        .btn-mua-hang > a {
            text-decoration: none;
            color: #ffffff;
        }

    /* ------------------- css banner -----------------*/
    .banner-product {
        width: 1300px;
        margin: 20px auto;
    }

    /* -------------------css flash sale sản phẩm ---------------*/
    .flash-sale-header {
        margin: 10px 0;
    }

    .flash-sale-hr {
        width: 1000px;
        margin: 10px auto;
        border: 2px solid #ffffff;
        opacity: 100%;
    }

    .flash-sale {
        width: 100%;
        height: 450px;
        background-color: #ED2B2A;
        border: 1px solid #000000;
    }

    .card-flashsale {
        background-color: #ffffff;
        height: 100%;
    }

    .card-flashsale-pro-img {
        width: 250px;
        height: 250px;
    }

        .card-flashsale-pro-img:hover {
            box-sizing: border-box;
            box-shadow: 5px 5px 10px 5px #888888;
            transform: scale(1.01, 1.01);
        }

    .card-flashsale-pro-name {
        text-transform: uppercase;
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card-flashsale-pro-price {
        color: red;
        font-size: 1.1rem;
        font-weight: bold;
    }
   
    .card-body {
        height: 80px;
    }
</style>

@* PHẦN SLIDER *@
<div id="demo" class="carousel slide" data-bs-ride="carousel">

    @*Indicators/dots*@
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
    </div>

    @*The slideshow/carousel*@
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/images/banner2.png" alt="Los Angeles" class="d-block w-100" style="height:500px">
        </div>
        <div class="carousel-item">
            <img src="~/Content/images/banner3.png" alt="Chicago" class="d-block w-100" style="height:500px">
        </div>
        <div class="carousel-item">
            <img src="~/Content/images/banner1.png" alt="New York" class="d-block w-100" style="height:500px">
        </div>
    </div>

    @*Left and right controls/icons*@
    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>



<hr />

@* PHẦN FLASH SALE *@
<div class="flash-sale container text-center">
    <div class="flash-sale-header">
        <img src="//theme.hstatic.net/1000288770/1000794542/14/img_home_featured_title.png?v=76" loading="lazy" width="230" height="50">
    </div>

    <hr class="flash-sale-hr" />
    <div class="row">
        @foreach (var item in Model.Take(4))
        {
            decimal price = (decimal)item.GiaSp;
            <div class="col-sm-12 col-sm-6 col-md-3 col-lg-3">
                <div class="card-pro card-flashsale">
                    <a href="@Url.Action("MoTa", "SanPhams", new { id = item.MaSP })">
                        <img class="card-flashsale-pro-img" src="~/Content/images/@item.Hinh1" />
                    </a>
                    <p class="card-flashsale-pro-name">@Html.DisplayFor(model => item.TenSP)</p>
                    <p class="card-flashsale-pro-price">@price.ToString("#,##0 VNĐ").Replace(',', '.') </p>
                </div>
            </div>
        }
    </div>
    <hr class="flash-sale-hr" />
</div>
