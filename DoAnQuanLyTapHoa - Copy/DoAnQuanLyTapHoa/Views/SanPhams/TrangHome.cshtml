@model IEnumerable<DoAnQuanLyTapHoa.Models.SanPham>

@{
    ViewBag.Title = "TrangHome";
    Layout = "~/Views/Shared/TrangChu.cshtml";
}
<div id="demo" class="carousel slide" data-bs-ride="carousel">

     @*Indicators/dots*@ 
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
    </div>

     @*The slideshow/carousel*@ 
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/images/banner2.png" alt="Los Angeles" class="d-block w-100" style="height:500px">
        </div>
        <div class="carousel-item">
            <img src="~/Content/images/banner3.png" alt="Chicago" class="d-block w-100" style="height:500px">
        </div>
        <div class="carousel-item">
            <img src="~/Content/images/banner1.png" alt="New York" class="d-block w-100" style="height:500px">
        </div>
    </div>

     @*Left and right controls/icons*@ 
    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>
<div class="flash-sale container text-center">
    <div class="flash-sale-header">
        <img src="//theme.hstatic.net/1000288770/1000794542/14/img_home_featured_title.png?v=76" loading="lazy" width="230" height="50">
    </div>

    <hr class="flash-sale-hr" />
    <div class="row">
        @foreach (var item in Model.Take(4))
        {
            decimal price = (decimal)item.GiaSp;
            <div class="col-sm-12 col-sm-6 col-md-3 col-lg-3">
                <div class="card-pro card-flashsale">
                    <a href="@Url.Action("MoTa", "SanPhams", new { id = item.MaSP })">
                        <img class="card-flashsale-pro-img" src="~/Content/images/@item.Hinh1" />
                    </a>
                    <p class="card-flashsale-pro-name">@Html.DisplayFor(model => item.TenSP)</p>
                    <p class="card-flashsale-pro-price">@price.ToString("#,##0 VNĐ").Replace(',', '.')</p>
                </div>
            </div>
        }
    </div>
</div>

    <div class="headerOfProductList">
        <div class="linestraight"></div>
        <h2>Điện thoại nổi bật </h2>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                decimal price = (decimal)item.GiaSp;
                <div class="col-sm-12 col-sm-6 col-md-3 col-lg-3">
                    <div class="card" style="border-radius: 15px; border: 2px solid #696666 ">
                        <div class="bg-image hover-overlay ripple ripple-surface ripple-surface-light"
                             data-mdb-ripple-color="light">
                            <img class="card-pro-img" src="~/Content/images/@item.Hinh1"
                                 style="border-top-left-radius: 15px; border-top-right-radius: 15px; padding-top: 7px; padding-left: 50px" />
                            <a href="@Url.Action("MoTa", "SanPhams", new { id = item.MaSP })">
                                <div class="mask"></div>
                            </a>
                        </div>
                        <div class="card-body pb-0">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <p class="card-pro-name">@Html.DisplayFor(model => item.TenSP)</p>
                                </div>
                                <div>
                                    <div class="d-flex flex-row justify-content-end mt-1 mb-4 text-danger">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body pb-0">
                            <div class="d-flex justify-content-between">
                                <p class="card-pro-price">@price.ToString("#,##0 VNĐ").Replace(',', '.')  </p>
                            </div>

                        </div>

                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center pb-2 mb-1">
                                <a href="#!" class="text-dark fw-bold">Cancel</a>
                                <button type="button" class="btn btn-primary">Buy now</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

